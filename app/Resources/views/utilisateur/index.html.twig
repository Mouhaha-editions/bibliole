{% extends 'base.html.twig' %}
{% import '@Pagination/Pagination/macro.twig' as macro_pagination %}
{% block content %}

    <div class="row">
        <div class="col-md-12">

            <div class="card clearfix">
                <div class="header">
                    <h2>
                        Les utilisateurs
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="{{ url('admin_utilisateur_new') }}"
                                       class=" waves-effect waves-block">Ajouter</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                <form class="form-inline">
                    <input class="form-control" placeholder="Nom, prÃ©nom, classe" value="{{ app.request.get('search') }}" name="search"/> <button type="submit" class="btn btn-info">Go !</button>
                </form>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Classe</th>
                        <th>Identifiants</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for utilisateur in pagination.entities %}
                        <tr>

                            <td>{{ utilisateur.nom }}</td>
                            <td>{{ utilisateur.prenom }}</td>
                            <td>{% if utilisateur.classe is not null %}{{ utilisateur.classe }}{% endif %}</td>
                            <td>{{ utilisateur.username }}</td>
                            <td>
                                <a href="{{ path('admin_utilisateur_edit', { 'id': utilisateur.id }) }}"
                                   class="btn btn-info">modifier </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {{ macro_pagination.paginate(pagination) }}
            </div>
        </div>
    </div>
    </div>
{% endblock %}
